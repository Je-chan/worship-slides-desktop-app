    "@tailwindcss/vite": "^4.1.18",
    "better-sqlite3": "^12.6.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^4.1.18",
